#!/usr/bin/env ruby

require 'bundler/setup'
require 'require_all'
require_all 'lib'

def main(args)
  puts "$ bin/assign #{args.first}"
  output_file = Assign.main(args)
  puts ""

  puts "$ bin/notify #{(args + [output_file]).join(' ')}"
  Notify.main(args + [output_file])
end

main(ARGV) if $PROGRAM_NAME == __FILE__
